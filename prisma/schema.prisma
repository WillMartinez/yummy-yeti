generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          String   @id @default(uuid())
  title       String
  description String
  difficulty  String
  category    String
  subCategory String
  ingredients Json
  instructions Json
  prepTime    Int
  cookTime    Int
  servings    Int
  imageID    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("recipes")
}